server {
    listen 80;
    server_name translator.example.com;

    # LibreTranslate API (translation)
    location / {
        proxy_pass http://127.0.0.1:5000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }

    # Subtitle API (subtitle lookups from MongoDB)
    location /subtitles/ {
        proxy_pass http://127.0.0.1:3300;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

# After placing this file in /etc/nginx/sites-available/ and
# creating a symlink in /etc/nginx/sites-enabled/:
#
#   sudo cp translator.conf /etc/nginx/sites-available/translator.example.com
#   sudo ln -s /etc/nginx/sites-available/translator.example.com /etc/nginx/sites-enabled/
#   sudo nginx -t && sudo systemctl reload nginx
#
# Then obtain an SSL certificate with Certbot:
#
#   sudo certbot --nginx -d translator.example.com
